{
  "name": "electron-template-app",
  "version": "1.0.0",
  "main": "build/main.js",
  "license": "MIT",
  "author": "Eli Cohen",
  "description": "A simple Electron app with React Electron Builder",
  "build": {
    "appId": "com.electron.builder-webpack",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "build/**/*"
    ],
    "extraMetadata": {
      "main": "build/main.js"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "scripts": {
    "app:dir": "electron-builder --dir",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "clean": "rimraf dist && rimraf build",
    "dev": "electron-vite serve --mode dev",
    "build": "electron-vite build --mode prod",
    "dist": "yarn clean && yarn build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@mcesystems/reflow": "^7.0.0",
    "@mcesystems/reflow-react-display-layer": "^7.0.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.3"
  }
}